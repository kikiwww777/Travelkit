<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.check.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.example.check.pojo.User">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="gender" property="gender" jdbcType="VARCHAR"/>
        <result column="birthday" property="birthday" jdbcType="DATE"/>
        <result column="avatar" property="avatar" jdbcType="VARCHAR"/>
        <result column="bio" property="bio" jdbcType="VARCHAR"/>
        <result column="open_id" property="openId" jdbcType="VARCHAR"/>
        <result column="is_status" property="isStatus" jdbcType="INTEGER"/>
        <result column="identity" property="identity" jdbcType="INTEGER"/>
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP"/>
        <result column="updated_at" property="updatedAt" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, username,  name, gender, birthday, avatar, bio, open_id, is_status, identity, created_at, updated_at
    </sql>

    <select id="selectById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM users
        WHERE id = #{id}
    </select>


    <select id="selectByOpenId" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM users
        WHERE open_id = #{openId}
    </select>

    <select id="selectByUsername" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM users
        WHERE username = #{username}
    </select>

    <select id="selectByPhone" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM users
        WHERE phone = #{phone}
    </select>

    <select id="selectByEmail" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM users
        WHERE email = #{email}
    </select>

    <insert id="insert" parameterType="com.example.check.pojo.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users (username,  name, gender, birthday, avatar, bio, open_id, is_status, identity, created_at, updated_at)
        VALUES (#{username}, #{name}, #{gender}, #{birthday}, #{avatar}, #{bio}, #{openId}, #{isStatus}, #{identity}, #{createdAt}, #{updatedAt})
    </insert>

    <update id="update" parameterType="com.example.check.pojo.User">
        UPDATE users
        SET username = #{username},
            name = #{name},
            gender = #{gender},
            birthday = #{birthday},
            avatar = #{avatar},
            bio = #{bio},
            open_id = #{openId},
            is_status = #{isStatus},
            identity = #{identity},
            updated_at = NOW()
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="java.lang.Integer">
        DELETE FROM users WHERE id = #{id}
    </delete>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM users
        ORDER BY created_at DESC
    </select>

    <select id="selectByPage" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM users
        ORDER BY created_at DESC
    </select>

    <select id="count" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM users
    </select>

</mapper>
