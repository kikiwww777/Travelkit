/* pages/home/home.wxss */
.home-container {
  padding-bottom: 80px;
  background: linear-gradient(180deg, #f0f4f8 0%, #ffffff 100%);
}

.welcome-banner {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 48px 24px;
  color: white;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(102, 126, 234, 0.3);
}

.welcome-banner::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.15) 0%, transparent 70%);
  animation: shimmer 4s ease-in-out infinite;
}

@keyframes shimmer {
  0%, 100% {
    transform: translate(0, 0) rotate(0deg);
  }
  50% {
    transform: translate(30px, 30px) rotate(180deg);
  }
}

.banner-content {
  max-width: 600px;
  margin: 0 auto;
  position: relative;
  z-index: 1;
}

.banner-text {
  text-align: center;
}

.banner-title {
  display: block;
  font-size: 28px;
  font-weight: 700;
  margin-bottom: 16px;
  letter-spacing: 0.5px;
  text-shadow: 0 2px 12px rgba(0, 0, 0, 0.2);
}

.banner-subtitle {
  display: block;
  font-size: 15px;
  opacity: 0.95;
  margin-bottom: 32px;
  line-height: 1.6;
  letter-spacing: 0.3px;
}

.banner-btn {
  width: 220px;
  height: 48px;
  line-height: 48px;
  border-radius: 24px;
  font-weight: 600;
  font-size: 16px;
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
}

.banner-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
}

.features {
  display: flex;
  gap: 16px;
  padding: 24px 20px;
}

.feature-card {
  flex: 1;
  background: white;
  border-radius: 16px;
  padding: 24px 20px;
  text-align: center;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  border: 1px solid rgba(255, 255, 255, 0.8);
}

.feature-card:active {
  transform: translateY(-4px);
  box-shadow: 0 6px 24px rgba(0, 0, 0, 0.12);
}

.feature-icon {
  font-size: 36px;
  margin-bottom: 16px;
}

.feature-title {
  display: block;
  font-size: 16px;
  font-weight: 700;
  margin-bottom: 10px;
  color: #303133;
  letter-spacing: 0.3px;
}

.feature-desc {
  display: block;
  font-size: 13px;
  color: #909399;
  line-height: 1.6;
}

.recent-trips {
  padding: 24px 20px;
  background: transparent;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.section-title {
  font-size: 20px;
  font-weight: 700;
  color: #303133;
  letter-spacing: 0.5px;
  position: relative;
  padding-left: 12px;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 4px;
  height: 20px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 2px;
}

.section-more {
  font-size: 14px;
  color: #667eea;
  font-weight: 600;
  transition: all 0.3s ease;
}

.section-more:active {
  color: #764ba2;
}

.trip-list {
  background: white;
  border-radius: 16px;
  padding: 20px;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
  border: 1px solid rgba(255, 255, 255, 0.8);
}

.trip-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 18px 0;
  border-bottom: 1px solid #f0f2f5;
  transition: all 0.3s ease;
}

.trip-item:last-child {
  border-bottom: none;
}

.trip-item:active {
  background: #fafbfc;
  border-radius: 12px;
  padding-left: 12px;
  padding-right: 12px;
  margin-left: -12px;
  margin-right: -12px;
}

.trip-info {
  flex: 1;
}

.trip-destination {
  display: block;
  font-size: 17px;
  font-weight: 700;
  color: #303133;
  margin-bottom: 10px;
  letter-spacing: 0.3px;
}

.trip-date {
  display: block;
  font-size: 13px;
  color: #909399;
  margin-bottom: 6px;
  font-weight: 500;
}

.trip-status {
  display: inline-block;
  font-size: 12px;
  color: #667eea;
  font-weight: 600;
  padding: 4px 10px;
  background: linear-gradient(135deg, #ecf5ff 0%, #e6f7ff 100%);
  border-radius: 12px;
  border-left: 3px solid #667eea;
}

.trip-btn {
  margin-left: 16px;
  border-radius: 20px;
  transition: all 0.3s ease;
}

.trip-btn:active {
  transform: scale(0.95);
}

.empty-state {
  text-align: center;
  padding: 60px 20px;
  color: #909399;
}

.empty-btn {
  margin-top: 20px;
  border-radius: 24px;
  font-weight: 600;
  box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
}

.quick-actions {
  display: flex;
  gap: 14px;
  padding: 24px 20px;
  background: transparent;
}

.action-card {
  flex: 1;
  background: white;
  border-radius: 16px;
  padding: 24px 20px;
  text-align: center;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  border: 1px solid rgba(255, 255, 255, 0.8);
}

.action-card:active {
  transform: translateY(-4px) scale(0.98);
  box-shadow: 0 6px 24px rgba(102, 126, 234, 0.15);
}

.action-icon {
  font-size: 28px;
  margin-bottom: 12px;
}

.action-text {
  display: block;
  font-size: 13px;
  color: #606266;
  font-weight: 600;
  letter-spacing: 0.3px;
}

