/* pages/trip-detail/trip-detail.wxss */
.trip-detail-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f7fa 0%, #ffffff 100%);
  padding-bottom: 40px;
}

.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  font-size: 16px;
  color: #909399;
}

.trip-detail {
  padding: 16px;
}

/* 行程头部 */
.trip-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16px;
  padding: 24px;
  margin-bottom: 16px;
  box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
}

.trip-info {
  display: flex;
  flex-direction: column;
}

.trip-destination {
  font-size: 24px;
  font-weight: 700;
  color: white;
  margin-bottom: 16px;
}

.trip-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
  font-size: 13px;
  color: rgba(255, 255, 255, 0.95);
}

.trip-status {
  padding: 4px 12px;
  border-radius: 12px;
  font-size: 12px;
  font-weight: 600;
}

.status-preparing {
  background: rgba(255, 193, 7, 0.3);
  color: #fff;
}

.status-ongoing {
  background: rgba(66, 165, 245, 0.3);
  color: #fff;
}

.status-completed {
  background: rgba(76, 175, 80, 0.3);
  color: #fff;
}

.status-cancelled {
  background: rgba(158, 158, 158, 0.3);
  color: #fff;
}

/* 进度卡片 */
.progress-card {
  background: white;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.progress-title {
  font-size: 16px;
  font-weight: 600;
  color: #303133;
}

.progress-text {
  font-size: 14px;
  color: #409eff;
  font-weight: 600;
}

.progress-bar {
  width: 100%;
}

/* 信息卡片 */
.trip-info-card {
  background: white;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 16px;
  padding-bottom: 12px;
  border-bottom: 1px solid #f0f0f0;
}

.card-title {
  font-size: 18px;
  font-weight: 600;
  color: #303133;
}

.card-body {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.info-row {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.info-label {
  font-size: 13px;
  color: #909399;
  font-weight: 500;
}

.info-value {
  font-size: 15px;
  color: #606266;
  line-height: 1.6;
}

/* 天气卡片 */
.weather-card {
  background: white;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.weather-hint {
  font-size: 11px;
  color: #909399;
  margin-left: 8px;
}

.weather-loading {
  text-align: center;
  padding: 40px;
  color: #909399;
  font-size: 14px;
}

.weather-content {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.weather-city {
  font-size: 16px;
  font-weight: 600;
  color: #303133;
}

.weather-error-tip {
  padding: 12px;
  background: #fef0e6;
  border: 1px solid #f5dab1;
  border-radius: 8px;
  color: #e6a23c;
  font-size: 13px;
}

.weather-forecast {
  width: 100%;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
}

.forecast-list {
  display: flex;
  gap: 12px;
  padding: 8px 0;
}

.forecast-item {
  display: flex;
  flex-direction: column;
  min-width: 120px;
  padding: 12px;
  background: #fafafa;
  border-radius: 8px;
  border: 1px solid transparent;
  transition: all 0.3s;
}

.forecast-item.is-trip-date {
  background: linear-gradient(135deg, #ffeb3b 0%, #ffc107 100%);
  border: 2px solid #ff9800;
  box-shadow: 0 2px 8px rgba(255, 152, 0, 0.4);
}

.forecast-date {
  font-size: 12px;
  color: #606266;
  margin-bottom: 8px;
  font-weight: 500;
}

.forecast-item.is-trip-date .forecast-date {
  color: #ff6f00;
  font-weight: 700;
}

.forecast-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6px;
}

.forecast-icons {
  display: flex;
  gap: 4px;
  align-items: center;
}

.forecast-icon {
  width: 32px;
  height: 32px;
}

.forecast-icon-night {
  opacity: 0.7;
}

.forecast-temp {
  font-size: 14px;
  color: #303133;
  font-weight: 500;
}

.forecast-item.is-trip-date .forecast-temp {
  color: #e65100;
  font-weight: 700;
}

.temp-max {
  font-weight: 600;
}

.temp-min {
  color: #909399;
  font-size: 12px;
}

.forecast-text {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 2px;
  font-size: 11px;
  color: #909399;
}

.forecast-text-day {
  font-weight: 500;
}

.forecast-text-night {
  font-size: 10px;
  opacity: 0.8;
}

.forecast-item.is-trip-date .forecast-text {
  color: #e65100;
  font-weight: 600;
}

.weather-error {
  text-align: center;
  padding: 40px;
  color: #e6a23c;
  font-size: 14px;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 12px;
  padding: 16px 0;
}

.action-btn {
  flex: 1;
  height: 48px;
  line-height: 48px;
  border-radius: 12px;
  font-size: 16px;
  font-weight: 600;
  border: none;
  background: white;
  color: #606266;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.action-btn[disabled] {
  opacity: 0.5;
  background: #f5f5f5;
  color: #c0c4cc;
}
