<!--pages/register/register.wxml-->
<view class="register-container">
  <view class="register-form">
    <view class="form-header">
      <view class="logo">📦</view>
      <text class="title">注册账号</text>
      <text class="subtitle">创建您的出行必带账号</text>
    </view>
    
    <view class="form-content">
      <view class="form-item">
        <input 
          class="form-input" 
          type="text" 
          placeholder="请输入用户名"
          value="{{username}}"
          bindinput="onUsernameInput"
        />
      </view>
      
      <view class="form-item">
        <input 
          class="form-input" 
          type="text" 
          placeholder="请输入真实姓名"
          value="{{name}}"
          bindinput="onNameInput"
        />
      </view>
      
      <view class="form-item">
        <input 
          class="form-input" 
          type="number" 
          placeholder="请输入手机号"
          value="{{phone}}"
          bindinput="onPhoneInput"
        />
      </view>
      
      <view class="form-item">
        <input 
          class="form-input" 
          type="text" 
          placeholder="请输入邮箱"
          value="{{email}}"
          bindinput="onEmailInput"
        />
      </view>
      
      <view class="form-item">
        <input 
          class="form-input" 
          type="password" 
          placeholder="请输入密码"
          password
          value="{{password}}"
          bindinput="onPasswordInput"
        />
      </view>
      
      <view class="form-item">
        <input 
          class="form-input" 
          type="password" 
          placeholder="请确认密码"
          password
          value="{{confirmPassword}}"
          bindinput="onConfirmPasswordInput"
        />
      </view>
      
      <view class="form-item">
        <view class="verification-input">
          <input 
            class="form-input verification-code" 
            type="number" 
            placeholder="请输入验证码"
            value="{{verificationCode}}"
            bindinput="onVerificationCodeInput"
          />
          <button 
            class="code-btn" 
            type="default"
            size="mini"
            disabled="{{codeCountdown > 0}}"
            bindtap="sendVerificationCode"
          >
            {{codeCountdown > 0 ? codeCountdown + 's后重发' : '获取验证码'}}
          </button>
        </view>
      </view>
      
      <view class="form-item">
        <checkbox-group bindchange="onAgreementChange">
          <label class="checkbox-label">
            <checkbox value="agreement" checked="{{agreement}}" />
            <text>我已阅读并同意</text>
            <text class="link-text">《用户协议》</text>
            <text>和</text>
            <text class="link-text">《隐私政策》</text>
          </label>
        </checkbox-group>
      </view>
      
      <button 
        class="btn-primary register-btn" 
        type="primary"
        loading="{{loading}}"
        bindtap="handleRegister"
      >
        注册
      </button>
      
      <view class="login-link">
        <text>已有账号？</text>
        <text class="link-text" bindtap="goToLogin">立即登录</text>
      </view>
    </view>
  </view>
</view>

