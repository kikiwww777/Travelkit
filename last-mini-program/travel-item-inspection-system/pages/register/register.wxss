/* pages/register/register.wxss */
.register-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
  box-sizing: border-box;
}

.register-form {
  background: white;
  border-radius: 12px;
  padding: 40px;
  width: 100%;
  max-width: 400px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
}

.form-header {
  text-align: center;
  margin-bottom: 30px;
}

.logo {
  font-size: 48px;
  margin-bottom: 16px;
  text-align: center;
}

.title {
  display: block;
  margin: 16px 0 8px 0;
  color: #303133;
  font-size: 24px;
  font-weight: 600;
}

.subtitle {
  display: block;
  color: #909399;
  font-size: 14px;
}

.form-content {
  width: 100%;
}

.form-item {
  margin-bottom: 20px;
}

.form-input {
  width: 100%;
  padding: 12px;
  border: 1px solid #dcdfe6;
  border-radius: 4px;
  font-size: 14px;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #409eff;
}

.verification-input {
  display: flex;
  gap: 12px;
}

.verification-code {
  flex: 1;
}

.code-btn {
  height: 44px;
  min-width: 100px;
  padding: 0 12px;
}

.checkbox-label {
  display: flex;
  align-items: center;
  font-size: 14px;
  color: #606266;
  flex-wrap: wrap;
}

.link-text {
  color: #409eff;
  font-size: 14px;
}

.register-btn {
  width: 100%;
  height: 48px;
  margin-bottom: 20px;
  border-radius: 4px;
  font-size: 16px;
}

.login-link {
  text-align: center;
  color: #606266;
  font-size: 14px;
}

.login-link .link-text {
  margin-left: 4px;
}

