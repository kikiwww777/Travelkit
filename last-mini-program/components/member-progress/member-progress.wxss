.member-progress {
  /* 移除margin-top，由父容器控制 */
  background: transparent;
  border-radius: 0;
  padding: 0;
  box-shadow: none;
}

.progress-header {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 20rpx;
  margin-bottom: 32rpx;
  padding-bottom: 32rpx;
  border-bottom: 1rpx solid #f8fafc;
}

.title {
  font-size: 26rpx;
  font-weight: 700;
  color: #1e293b;
  white-space: nowrap;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.filter-group {
  display: inline-flex;
  background: #f1f5f9;
  border-radius: 100rpx;
  padding: 4rpx;
  gap: 4rpx;
}

.filter-pill {
  min-width: 140rpx;
  text-align: center;
  padding: 12rpx 24rpx;
  border-radius: 100rpx;
  font-size: 24rpx;
  color: #64748b;
  background: transparent;
  font-weight: 600;
}

.filter-pill.active {
  background: linear-gradient(135deg, #0ea5e9 0%, #3b82f6 100%);
  color: #fff;
  font-weight: 700;
  box-shadow: 0 4rpx 12rpx rgba(14, 165, 233, 0.3);
}

.member-empty {
  text-align: center;
  color: #94a3b8;
  padding: 48rpx 0;
  font-size: 24rpx;
}

.member-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.member-card {
  border-radius: 20rpx;
  padding: 24rpx 32rpx;
  border: 1px solid #f1f5f9;
  background: #f8fafc;
  transition: all 0.2s;
}

.member-card.pending {
  border-color: #fef3c7;
  background: #fffbeb; /* Amber 50 */
}

.member-card.completed {
  border-color: #dcfce7;
  background: #f0fdf4; /* Green 50 */
}

.member-head {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.member-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #eff6ff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 700;
  color: #3b82f6;
  overflow: hidden;
  flex-shrink: 0;
}

.member-avatar image {
  width: 100%;
  height: 100%;
}

.member-avatar text {
  line-height: 100rpx;
}

.member-meta {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.member-name {
  font-size: 28rpx;
  font-weight: 700;
  color: #1e293b;
}

.member-counts {
  font-size: 24rpx;
  color: #64748b;
}

.member-pill {
  padding: 8rpx 24rpx;
  border-radius: 100rpx;
  font-size: 22rpx;
  font-weight: 700;
  flex-shrink: 0;
}

.member-pill.completed {
  background: rgba(5, 150, 105, 0.15); /* Emerald 600 with opacity */
  color: #059669; /* Emerald 600 */
  border: 1px solid rgba(5, 150, 105, 0.2);
}

.member-pill.pending {
  background: rgba(245, 158, 11, 0.15); /* Amber 500 with opacity */
  color: #f59e0b; /* Amber 500 */
  border: 1px solid rgba(245, 158, 11, 0.2);
}


