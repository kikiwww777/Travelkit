/* 自定义底部导航栏 */
.tab-bar {
  position: fixed;
  left: 16rpx;
  right: 16rpx;
  bottom: 16rpx;
  height: 150rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: linear-gradient(120deg, #f7fbff 0%, #dfe3e7 100%);
  border-radius: 64rpx;
  box-shadow: 0 -6rpx 20rpx rgba(0, 0, 0, 0.06);
  z-index: 999;
}

.tab-item {
  flex: 1;
  display: flex;
  justify-content: center;
}

.pill {
  width: 78rpx;
  height: 78rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.16s ease, background 0.16s ease, box-shadow 0.16s ease;
}

.pill--active {
  background: rgba(0, 165, 226, 0.12);
  
  transform: translateY(-1.5px);
}

.icon {
  width: 42rpx;
  height: 42rpx;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}

