.icon-house {
  width: 42rpx;
  height: 42rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  --icon-house-color: #9aa3af;
}

.icon-house-roof {
  position: absolute;
  top: 4rpx;
  width: 28rpx;
  height: 14rpx;
  clip-path: polygon(50% 0%, 100% 100%, 0% 100%);
  background: var(--icon-house-color);
}

.icon-house-body {
  position: absolute;
  bottom: 4rpx;
  width: 30rpx;
  height: 20rpx;
  background: var(--icon-house-color);
  border-radius: 6rpx;
}

.icon-house-door {
  position: absolute;
  bottom: 4rpx;
  width: 8rpx;
  height: 10rpx;
  background: #ffffff;
  border-radius: 2rpx;
}

.icon-house--active {
  --icon-house-color: #00a5e2;
}
