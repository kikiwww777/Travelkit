}

.wanderlust-hero-chip {
  display: inline-block;
  padding: 4px 14px;
  border-radius: 999px;
  background: #06b6d4;
  border: none;
  font-size: 11px;
  font-weight: 700;
  letter-spacing: 1px;
  color: #ffffff;
  margin-bottom: 8px;
  box-shadow: 0 4px 10px rgba(6, 182, 212, 0.6);
}

.wanderlust-hero-title {
  font-size: 20px;
  font-weight: 700;
  margin-bottom: 4px;
}

.wanderlust-hero-sub {
  display: flex;
  align-items: center;
  font-size: 12px;
  color: rgba(249, 250, 251, 0.9);
}

.wanderlust-hero-icon {
  margin-right: 4px;
}

/* 灵感推荐 Hero Section（无行程时显示） */
.wanderlust-hero-inspiration {
  margin: 0 16px 20px;
  height: 180px;
  border-radius: 28px;
  overflow: hidden;
  position: relative;
  box-shadow: 0 16px 40px rgba(15, 23, 42, 0.25);
}

.wanderlust-hero-inspiration-bg-img {
  position: absolute;
