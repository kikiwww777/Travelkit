  background-position: center;
}

.wanderlust-hero {
  margin: 0 16px 20px;
  height: 180px;
  border-radius: 28px;
  overflow: hidden;
  position: relative;
  box-shadow: 0 16px 40px rgba(15, 23, 42, 0.25);
}

.wanderlust-hero-img {
  width: 100%;
  height: 100%;
}

.wanderlust-hero-mask {
