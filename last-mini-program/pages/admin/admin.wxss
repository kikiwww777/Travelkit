/* pages/admin/admin.wxss */
.admin-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 20px;
}

/* 标签页 */
.tabs {
  display: flex;
  background: white;
  border-bottom: 1px solid #e0e0e0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 15px 0;
  font-size: 16px;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #667eea;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: #667eea;
}

/* 标签页内容 */
.tab-content {
  padding: 15px;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-bottom: 15px;
  padding: 10px;
  background: white;
  border-radius: 8px;
}

.filter-item {
  padding: 8px 12px;
  background: #f0f0f0;
  border-radius: 4px;
  font-size: 14px;
  min-width: 40px;
  text-align: center;
}

.filter-input {
  flex: 1;
  padding: 8px 12px;
  background: #f0f0f0;
  border-radius: 4px;
  font-size: 14px;
}

.search-bar {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-bottom: 15px;
  padding: 10px;
  background: white;
  border-radius: 8px;
}

.search-input {
  flex: 1;
  padding: 8px 12px;
  background: #f0f0f0;
  border-radius: 4px;
  font-size: 14px;
}

.refresh-btn {
  background: #667eea;
  color: white;
  border-radius: 4px;
}

/* 列表容器 */
.list-container {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.list-item {
  background: white;
  border-radius: 8px;
  padding: 15px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

/* 模板卡片样式 */
.template-card {
  background: white;
  border-radius: 8px;
  padding: 15px;
  margin-bottom: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  position: relative;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
  padding-bottom: 10px;
  border-bottom: 1px solid #f0f0f0;
}

.card-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
  flex: 1;
}

.view-detail-btn {
  background: #667eea;
  color: white;
  border-radius: 4px;
  font-size: 12px;
  padding: 4px 12px;
}

.card-content {
  position: relative;
}

.card-actions {
  /* display: flex; */
  /* gap: 8px; */
  float: right;
  margin-top: 12px;
  padding-top: 12px;
  border-top: 1px solid #f0f0f0;
  justify-content: flex-end;
}

.card-info-row {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
  font-size: 14px;
}

.info-label {
  color: #666;
  min-width: 80px;
  font-weight: 500;
}

.info-value {
  color: #333;
  flex: 1;
  word-break: break-word;
}

.info-tag {
  padding: 2px 8px;
  border-radius: 4px;
  font-size: 12px;
}

.type-tag {
  background: #e3f2fd;
  color: #1976d2;
}

.tags-value {
  color: #667eea;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
}

.item-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
}

.item-status {
  padding-bottom: 15px;
  /* padding-left:10px ; */
  border-radius: 4px;
  font-size: 12px;
  width: 45px;
  
}

.item-status.pending {
  background: #fff3cd;
  color: #856404;
}

.item-status.approved {
  background: #d4edda;
  color: #155724;
}

.item-status.rejected {
  background: #f8d7da;
  color: #721c24;
}

.item-status.no-audit {
  background: #e2e3e5;
  color: #383d41;
}

.item-status.normal {
  background: #d4edda;
  color: #155724;
}

.item-status.disabled {
  background: #f8d7da;
  color: #721c24;
}

.item-status.active {
  background: #d4edda;
  color: #155724;
}

.item-status.inactive {
  background: #f8d7da;
  color: #721c24;
}

.item-info {
  display: flex;
  flex-direction: column;
  gap: 5px;
  margin-bottom: 10px;
  font-size: 14px;
  color: #666;
}

.item-actions {
  display: flex;
  gap: 8px;
  margin-top: 10px;
}

.action-btn {
  padding: 6px 12px;
  margin-left: 5px;
  border-radius: 4px;
  font-size: 12px;
}

.approve-btn {
  background: #28a745;
  color: white;
}

.reject-btn {
  background: #dc3545;
  color: white;
}

.grant-btn {
  background: #ffc107;
  color: #333;
}

.disable-btn {
  background: #dc3545;
  color: white;
}

.enable-btn {
  background: #28a745;
  color: white;
}

.empty-state {
  text-align: center;
  padding: 40px 20px;
  color: #999;
  font-size: 14px;
}

/* 对话框 */
.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10000;
  width: 100vw;
  height: 100vh;
  box-sizing: border-box;
}

.dialog-content {
  width: 90%;
  max-width: 500px;
  max-height: 80vh;
  background: white;
  border-radius: 12px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  margin: auto;
  position: relative;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
}

.detail-dialog {
  max-width: 600px;
}

.dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px 20px;
  border-bottom: 1px solid #e0e0e0;
}

.dialog-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
}

.dialog-close {
  font-size: 24px;
  color: #999;
  line-height: 1;
}

.dialog-body {
  padding: 20px;
  overflow-y: auto;
  flex: 1;
}

.dialog-footer {
  padding: 15px 20px;
  border-top: 1px solid #e0e0e0;
  background: white;
}

.detail-item {
  margin-bottom: 15px;
}

.detail-label {
  font-size: 14px;
  color: #666;
  margin-right: 8px;
}

.detail-value {
  font-size: 14px;
  color: #333;
}

.template-items {
  margin-top: 10px;
  padding: 10px;
  background: #f5f5f5;
  border-radius: 4px;
  max-height: 200px;
  overflow-y: auto;
}

.template-item {
  margin-bottom: 12px;
}

.item-detail-card {
  padding: 12px;
  background: #f9f9f9;
  border-radius: 6px;
  border-left: 3px solid #667eea;
}

.item-detail-row {
  display: flex;
  align-items: flex-start;
  margin-bottom: 8px;
  font-size: 14px;
}

.item-detail-row:last-child {
  margin-bottom: 0;
}

.item-detail-label {
  color: #666;
  min-width: 100px;
  font-weight: 500;
}

.item-detail-value {
  color: #333;
  flex: 1;
  word-break: break-word;
}

.item-name {
  color: #333;
  font-weight: 500;
  flex: 1;
}

.item-priority {
  padding: 2px 8px;
  background: #fff3cd;
  color: #856404;
  border-radius: 4px;
  font-size: 12px;
  display: inline-block;
}

.item-note {
  color: #666;
  font-size: 12px;
  margin-top: 4px;
  display: block;
}

.empty-items {
  text-align: center;
  padding: 20px;
  color: #999;
  font-size: 14px;
}

.detail-section {
  margin-bottom: 20px;
}

.section-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  padding-bottom: 8px;
  border-bottom: 1px solid #e0e0e0;
}

.loading-text {
  text-align: center;
  padding: 20px;
  color: #999;
  font-size: 14px;
}

.detail-actions {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  gap: 10px;
  margin-top: 20px;
  padding-top: 15px;
  border-top: 1px solid #e0e0e0;
}

.action-buttons-right {
  display: flex;
  gap: 10px;
}

.audit-textarea {
  width: 100%;
  min-height: 120px;
  padding: 10px;
  border: 1px solid #e0e0e0;
  border-radius: 4px;
  font-size: 14px;
  margin-bottom: 15px;
}

.form-item {
  margin-bottom: 15px;
}

.form-label {
  font-size: 14px;
  color: #666;
  margin-right: 8px;
}

.form-value {
  font-size: 14px;
  color: #333;
}

.radio-label {
  display: block;
  margin: 8px 0;
  font-size: 14px;
}

.dialog-actions {
  display: flex;
  gap: 10px;
  margin-top: 20px;
}

.dialog-btn {
  flex: 1;
  padding: 10px;
  border-radius: 4px;
  font-size: 14px;
}

.cancel-btn {
  background: #f0f0f0;
  color: #333;
}

.confirm-btn {
  background: #667eea;
  color: white;
}

.detail-actions .approve-btn {
  background: #28a745;
  color: white;
}

.detail-actions .reject-btn {
  background: #dc3545;
  color: white;
}

/* 加载中 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 2000;
}

.loading-spinner {
  width: 40px;
  height: 40px;
  border: 4px solid #f3f3f3;
  border-top: 4px solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 10px;
  color: white;
  font-size: 14px;
}

