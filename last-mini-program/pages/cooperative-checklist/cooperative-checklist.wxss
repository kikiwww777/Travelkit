/* pages/cooperative-checklist/cooperative-checklist.wxss */
page {
  background-color: #f5f6f8;
  height: 100%;
  box-sizing: border-box;
}

.supply-depot-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: visible;
}

/* 1. 顶部导航栏 (Glass) */
.nav-bar-glass {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10px);
  border-bottom: 1rpx solid rgba(226, 232, 240, 0.5);
  position: sticky;
  top: 0;
  z-index: 50;
}

.nav-status-bar {
  width: 100%;
}

.nav-content {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
}

.nav-left {
  display: flex;
  align-items: center;
  color: #64748b;
  font-weight: 700;
  font-size: 28rpx;
}

.icon-chevron-left {
  width: 24rpx;
  height: 24rpx;
  border-left: 4rpx solid #64748b;
  border-bottom: 4rpx solid #64748b;
  transform: rotate(45deg);
  margin-right: 8rpx;
}

.nav-center {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav-title {
  font-size: 24rpx;
  font-weight: 700;
  color: #0f172a;
}

.nav-subtitle {
  font-size: 20rpx;
  font-weight: 700;
  color: #94a3b8;
  letter-spacing: 2rpx;
  text-transform: uppercase;
}

.nav-right {
  width: 60rpx;
}

/* 锁定提示 */
.locked-tip {
  margin: 16rpx 32rpx;
  padding: 20rpx 32rpx;
  background: #fff6e6;
  color: #d48806;
  border-radius: 24rpx;
  font-size: 24rpx;
  line-height: 1.4;
  box-shadow: 0 4rpx 12rpx rgba(212, 136, 6, 0.15);
  text-align: center;
}

/* 2. 滚动区 */
.main-scroll {
  flex: 1;
  overflow: hidden;
}

.scroll-inner {
  padding: 32rpx;
}

/* A. 统计卡片 */
.stats-card {
  background: white;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 16rpx 60rpx rgba(0,0,0,0.04);
  border: 1px solid #f1f5f9;
  margin-bottom: 48rpx;
  position: relative;
  overflow: hidden;
}

.stats-bg-blur {
  position: absolute;
  top: -50%;
  right: -20%;
  width: 300rpx;
  height: 300rpx;
  background: #e0f2fe;
  border-radius: 50%;
  filter: blur(60px);
  opacity: 0.5;
}

.stats-content {
  position: relative;
  z-index: 10;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.stats-left {
  display: flex;
  gap: 48rpx;
}

.stat-group {
  display: flex;
  flex-direction: column;
}

.stat-num {
  font-size: 64rpx;
  font-weight: 900;
  line-height: 1;
  margin-bottom: 4rpx;
}

.text-dark {
  color: #0f172a;
}

.text-gray {
  color: #cbd5e1;
}

.stat-label {
  font-size: 20rpx;
  font-weight: 700;
  color: #94a3b8;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.stats-right {
  text-align: right;
}

.progress-text {
  font-size: 48rpx;
  font-weight: 900;
  color: #0ea5e9;
}

.progress-track {
  width: 160rpx;
  height: 12rpx;
  background: #f1f5f9;
  border-radius: 100rpx;
  margin-top: 8rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: #0ea5e9;
  border-radius: 100rpx;
}

/* B. 筛选区 */
.filter-section {
  position: sticky;
  top: 0;
  z-index: 40;
  margin: 0 -16rpx 32rpx;
  padding: 16rpx;
  background: rgba(245, 246, 248, 0.95);
  border-radius: 32rpx;
}

.search-box {
  background: white;
  border-radius: 24rpx;
  border: 1px solid #f1f5f9;
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  margin-bottom: 16rpx;
  transition: all 0.2s;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.4;
}

.search-input {
  flex: 1;
  height: 100%;
  margin-left: 16rpx;
  font-size: 24rpx;
  font-weight: 700;
  color: #334155;
}

.placeholder-style {
  color: #cbd5e1;
}

.clear-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx;
  width: 48rpx;
  height: 48rpx;
}

.clear-icon-img {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
}

.category-scroll {
  white-space: nowrap;
  margin-bottom: 16rpx;
}

.category-list {
  display: flex;
  gap: 16rpx;
}

.cat-pill {
  padding: 12rpx 24rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  font-weight: 700;
  transition: all 0.2s;
  border: 1px solid transparent;
  white-space: nowrap;
}

.pill-normal {
  background: white;
  color: #64748b;
  border-color: #f1f5f9;
}

.pill-active {
  background: #0f172a;
  color: white;
  border-color: #0f172a;
  box-shadow: 0 8rpx 20rpx rgba(15,23,42,0.2);
}

.filter-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 8rpx;
}

.filter-info {
  font-size: 20rpx;
  font-weight: 700;
  color: #94a3b8;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.action-btns {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  padding: 8rpx 16rpx;
  background: white;
  border: 1px solid #f1f5f9;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 700;
  color: #64748b;
}

.btn-danger {
  color: #f43f5e;
  border-color: #fee2e2;
}

/* C. 物品列表 (Masonry Grid) */
.items-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.item-card {
  background: white;
  border-radius: 32rpx;
  padding: 24rpx;
  border: 1px solid #f1f5f9;
  position: relative;
  transition: all 0.2s;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.02);
}

.card-checked {
  border-color: #bbf7d0;
  box-shadow: 0 8rpx 24rpx rgba(16,185,129,0.1);
}

.check-indicator {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 4rpx solid #f1f5f9;
  display: flex;
  align-items: center;
  justify-content: center;
  background: white;
  transition: all 0.2s;
}

.checked-bg {
  background: #10b981;
  border-color: #10b981;
}

.icon-check-mini {
  width: 24rpx;
  height: 24rpx;
}

.item-delete-btn {
  position: absolute;
  top: 24rpx;
  left: 24rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(245, 101, 101, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.icon-delete {
  width: 24rpx;
  height: 24rpx;
}

.item-icon-box {
  width: 80rpx;
  height: 80rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.item-category-icon {
  width: 40rpx;
  height: 40rpx;
}

.item-info {
  margin-bottom: 16rpx;
}

.item-name {
  font-size: 28rpx;
  font-weight: 700;
  color: #1e293b;
  display: block;
  margin-bottom: 4rpx;
  line-height: 1.2;
}

.text-green {
  color: #065f46;
}

.item-category-text {
  font-size: 20rpx;
  font-weight: 700;
  color: #94a3b8;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.item-note-badge {
  border-top: 1px solid #f8fafc;
  padding-top: 16rpx;
  display: flex;
  align-items: flex-start;
  gap: 8rpx;
}

.icon-note-mini {
  width: 20rpx;
  height: 20rpx;
  margin-top: 2rpx;
  flex-shrink: 0;
}

.note-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.note-added-by {
  font-size: 18rpx;
  color: #0ea5e9;
  font-weight: 600;
}

.note-text {
  font-size: 18rpx;
  color: #64748b;
  line-height: 1.2;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
  opacity: 0.6;
}

.empty-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 24rpx;
  font-weight: 700;
  color: #94a3b8;
}

/* 3. 悬浮按钮 (FAB) */
.fab-btn {
  position: fixed !important;
  bottom: 80rpx !important;
  right: 40rpx !important;
  width: 112rpx !important;
  height: 112rpx !important;
  background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%) !important;
  border-radius: 50% !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  box-shadow: 0 10rpx 30rpx rgba(15, 23, 42, 0.4) !important;
  z-index: 99999 !important;
  transition: transform 0.1s;
  pointer-events: auto !important;
}

.fab-btn:active {
  transform: scale(0.9);
}

.fab-icon {
  width: 56rpx !important;
  height: 56rpx !important;
  display: block !important;
}

/* 4. 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(15, 23, 42, 0.6);
  backdrop-filter: blur(2px);
  z-index: 100;
}

.modal-panel {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 85vh;
  background: linear-gradient(to bottom, #ffffff, #f8fafc);
  border-top-left-radius: 64rpx;
  border-top-right-radius: 64rpx;
  z-index: 110;
  display: flex;
  flex-direction: column;
  transform: translateY(100%);
  transition: transform 0.3s ease-out;
}

.modal-panel.slide-up {
  transform: translateY(0);
}

.drag-handle-bar {
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.drag-handle {
  width: 96rpx;
  height: 12rpx;
  background: #e2e8f0;
  border-radius: 100rpx;
}

.modal-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.modal-header {
  padding: 0 48rpx 48rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.modal-title {
  font-size: 40rpx;
  font-weight: 900;
  color: #0f172a;
  letter-spacing: -1rpx;
}

.icon-sparkles {
  width: 48rpx;
  height: 48rpx;
}

.close-btn {
  width: 64rpx;
  height: 64rpx;
  background: #f1f5f9;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-x {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.5;
}

.form-scroll {
  flex: 1;
}

.form-body {
  padding: 0 48rpx;
}

.form-group {
  margin-bottom: 48rpx;
}

.label-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.label-text {
  font-size: 20rpx;
  font-weight: 700;
  color: #94a3b8;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.label-star {
  color: #f43f5e;
  font-size: 20rpx;
  font-weight: 700;
}

.input-box {
  background: #f8fafc;
  border: 1px solid #f1f5f9;
  border-radius: 32rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.input-icon-wrap {
  width: 80rpx;
  height: 80rpx;
  background: white;
  border: 1px solid #e2e8f0;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.input-icon {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.4;
}

.main-input {
  flex: 1;
  height: 80rpx;
  font-size: 36rpx;
  font-weight: 700;
  color: #1e293b;
}

.placeholder-gray {
  color: #cbd5e1;
}

.category-scroll {
  width: 100%;
  white-space: nowrap;
  margin: 0 -48rpx;
  padding: 0 48rpx;
  box-sizing: content-box;
}

.category-list {
  display: flex;
  gap: 24rpx;
  padding-bottom: 32rpx;
}

.category-item {
  width: 160rpx;
  height: 192rpx;
  border-radius: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  flex-shrink: 0;
  transition: all 0.2s;
  border: 4rpx solid transparent;
}

.cat-normal {
  background: white;
  border-color: #f1f5f9;
}

.cat-active {
  background: #0f172a;
  border-color: #0f172a;
  transform: scale(1.05);
}

.active-dot {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 16rpx;
  height: 16rpx;
  background: #38bdf8;
  border-radius: 50%;
}

.cat-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 16rpx;
}

.cat-text {
  font-size: 20rpx;
  font-weight: 700;
  color: #64748b;
}

.cat-active .cat-text {
  color: white;
}

.form-group-stack {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.text-group {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.label-text-sm {
  font-size: 20rpx;
  font-weight: 700;
  color: #94a3b8;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.textarea-box {
  background: #f8fafc;
  border: 1px solid #f1f5f9;
  border-radius: 32rpx;
  padding: 32rpx;
  display: flex;
  gap: 24rpx;
  position: relative;
  overflow: hidden;
}

.textarea-icon {
  width: 36rpx;
  height: 36rpx;
  margin-top: 8rpx;
  opacity: 0.4;
}

.main-textarea {
  width: 100%;
  font-size: 28rpx;
  font-weight: 500;
  color: #334155;
  line-height: 1.5;
}

.modal-footer {
  padding: 32rpx 48rpx 64rpx;
  background: rgba(255,255,255,0.9);
  backdrop-filter: blur(10px);
  border-top: 1px solid #f1f5f9;
  display: flex;
  gap: 24rpx;
}

.btn-reset {
  width: 112rpx;
  height: 112rpx;
  background: #f8fafc;
  border: 1px solid #f1f5f9;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-eraser {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.4;
}

.btn-cancel {
  flex: 1;
  height: 112rpx;
  background: white;
  border: 1px solid #e2e8f0;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 700;
  color: #475569;
}

.btn-confirm {
  flex: 2;
  height: 112rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  font-size: 32rpx;
  font-weight: 900;
  border: none;
}

.btn-confirm::after {
  border: none;
}

.btn-black {
  background: #0f172a;
  color: white;
  box-shadow: 0 20rpx 40rpx -10rpx rgba(15, 23, 42, 0.2);
}

.btn-disabled {
  background: #cbd5e1;
  color: white;
}

.icon-check {
  width: 40rpx;
  height: 40rpx;
}
