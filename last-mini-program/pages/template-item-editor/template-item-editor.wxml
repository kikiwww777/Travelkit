<view class="editor-page">
  <view class="editor-card">
    <view class="editor-header">新增模板物品</view>

    <view class="form-item">
      <text class="form-label">物品名称 *</text>
      <input class="form-input" value="{{form.name}}" bindinput="handleNameInput" placeholder="如：护照" />
    </view>

    <view class="form-item">
      <text class="form-label">分类 *</text>
      <picker mode="selector" range="{{categoryOptions}}" range-key="label" value="{{form.categoryIndex}}" bindchange="handleCategoryChange">
        <view class="picker-display">
          {{selectedCategoryLabel}}
        </view>
      </picker>
    </view>

    <view class="form-item">
      <text class="form-label">描述</text>
      <textarea class="form-textarea" value="{{form.description}}" bindinput="handleDescriptionInput" placeholder="可选：如放入行李箱" />
    </view>

    <view class="form-item">
      <text class="form-label">备注</text>
      <textarea class="form-textarea" value="{{form.note}}" bindinput="handleNoteInput" placeholder="可选：如随身携带" />
    </view>
  </view>

  <view class="editor-footer">
    <button bindtap="handleCancel">取消</button>
    <button type="primary" bindtap="handleConfirm">保存</button>
  </view>
</view>



