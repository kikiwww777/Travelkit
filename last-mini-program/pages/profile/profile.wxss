/* pages/profile/profile.wxss */
page {
  background-color: #f8fafc; /* slate-50 */
  padding-bottom: 60rpx;
}

.profile-container {
  width: 100%;
  box-sizing: border-box;
}

/* --- Profile Card --- */
.profile-card {
  margin: 0 32rpx;
  margin-top: 32rpx;
  background: #ffffff;
  border-radius: 48rpx; /* rounded-[32px] approx */
  padding: 48rpx;
  box-shadow: 0 20rpx 40rpx -12rpx rgba(0,0,0,0.05);
  border: 1rpx solid #f1f5f9;
  position: relative;
  overflow: hidden;
}

/* Decorative BG */
.deco-bg {
  position: absolute;
  top: 0;
  right: 0;
  width: 256rpx;
  height: 256rpx;
  background-color: #f0f9ff; /* sky-50 */
  border-bottom-left-radius: 100%;
  margin-right: -64rpx;
  margin-top: -64rpx;
  z-index: 0;
}

.profile-header {
  position: relative;
  z-index: 10;
  display: flex;
  align-items: center;
  gap: 32rpx; /* gap-4 */
  margin-bottom: 48rpx;
}

/* Avatar Styles */
.avatar-wrapper {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  flex-shrink: 0;
}

.avatar-border {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: linear-gradient(to top right, #38bdf8, #3b82f6); /* sky-400 to blue-500 */
  padding: 4rpx;
  box-shadow: 0 10rpx 15rpx -3rpx rgba(186, 230, 253, 0.5); /* shadow-sky-200 */
  box-sizing: border-box;
}

.avatar-inner {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: white;
  padding: 4rpx;
  box-sizing: border-box;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: #e2e8f0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
}

/* User Info */
.user-info {
  flex: 1;
}

.user-name {
  font-size: 40rpx;
  font-weight: 700;
  color: #1e293b; /* slate-800 */
}

.edit-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 6rpx -1rpx rgba(0, 0, 0, 0.1);
  transition: background-color 0.3s;
  flex-shrink: 0;
}

.btn-normal {
  background-color: #0f172a; /* slate-900 */
}

.btn-active {
  background-color: #10b981; /* emerald-500 */
}

.icon-sm {
  width: 28rpx;
  height: 28rpx;
}

.tags-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 8rpx;
}

.tag {
  font-size: 20rpx; /* 10px */
  font-weight: 700;
  color: #64748b; /* slate-500 */
  background-color: #f8fafc; /* slate-50 */
  padding: 4rpx 16rpx;
  border-radius: 999rpx;
  border: 1rpx solid #f1f5f9;
}

/* Stats Row */
.stats-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #f8fafc;
  padding-top: 48rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
}

.border-r {
  border-right: 1rpx solid #f8fafc;
}

.stat-num {
  font-size: 48rpx;
  font-weight: 900;
}

.stat-label {
  font-size: 20rpx;
  color: #94a3b8; /* slate-400 */
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  margin-top: 4rpx;
}

.text-sky { color: #0ea5e9; }
.text-emerald { color: #10b981; }
.text-dark { color: #1e293b; }

/* --- Form Section --- */
.form-section {
  margin: 48rpx 32rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 32rpx;
  padding: 0 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
}

.icon-user {
  width: 32rpx;
  height: 32rpx;
}

.form-card {
  background: white;
  border-radius: 48rpx;
  padding: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.02);
  border: 1rpx solid #f1f5f9;
}

.form-item {
  padding: 32rpx;
}

.border-b {
  border-bottom: 1rpx solid #f8fafc;
}

.form-label {
  display: block;
  font-size: 20rpx;
  font-weight: 700;
  color: #94a3b8; /* slate-400 */
  text-transform: uppercase;
  letter-spacing: 2rpx;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  background: transparent;
  font-weight: 700;
  font-size: 28rpx;
  color: #334155; /* slate-700 */
  height: 48rpx;
  min-height: 48rpx;
  line-height: 48rpx;
}

.form-textarea {
  width: 100%;
  font-weight: 500;
  color: #475569; /* slate-600 */
  font-size: 28rpx;
  line-height: 1.6;
  min-height: 120rpx;
}

.input-active {
  color: #0f172a; /* 更深的颜色表示可编辑 */
}

.placeholder-style {
  color: #cbd5e1;
}

.picker-inner {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.icon-chevron {
  width: 32rpx;
  height: 32rpx;
}

/* 保存按钮区域 */
.save-section {
  margin:  100rpx 64rpx;
  /* padding-top: 0rpx; */
}

.save-btn {
  width: 100%;
  height: 112rpx; /* h-14 */
  border-radius: 32rpx; /* rounded-2xl */
  background: linear-gradient(to right, #1e293b, #0f172a); /* from-slate-800 to-slate-900 */
  color: white;
  font-size: 28rpx; /* text-sm */
  font-weight: 700;
  border: none;
  box-shadow: 0 20rpx 25rpx -5rpx rgba(15, 23, 42, 0.2); /* shadow-xl shadow-slate-900/20 */
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  letter-spacing: 2rpx; /* tracking-wide */
  transition: all 0.2s;
}

.save-btn::after {
  border: none;
}

.save-btn:active {
  transform: scale(0.98);
}

.save-icon {
  width: 40rpx;
  height: 40rpx;
  flex-shrink: 0;
}

/* 其他功能 */
.action-card {
  background: white;
  border-radius: 48rpx;
  margin: 0 32rpx;
  padding: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.02);
  border: 1rpx solid #f1f5f9;
}

.action-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
}

.action-text {
  font-size: 28rpx;
  color: #f56c6c;
  font-weight: 600;
}

.action-arrow {
  font-size: 28rpx;
  color: #cbd5e1;
}

/* 对话框样式 */
.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.dialog-content {
  width: 80%;
  max-width: 500px;
  background: white;
  border-radius: 32rpx;
  overflow: hidden;
}

.dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.dialog-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
}

.dialog-close {
  font-size: 48rpx;
  color: #94a3b8;
  line-height: 1;
}

.dialog-body {
  padding: 32rpx;
}

.keyword-input-wrapper {
  display: flex;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.keyword-input {
  flex: 1;
  padding: 20rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  font-size: 28rpx;
}

.generate-btn {
  min-width: 120rpx;
}

.generated-picture-wrapper {
  text-align: center;
}

.generated-picture {
  width: 400rpx;
  height: 400rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid #e2e8f0;
}

.picture-actions {
  display: flex;
  gap: 16rpx;
  justify-content: center;
}

.change-btn,
.confirm-btn {
  min-width: 160rpx;
}
