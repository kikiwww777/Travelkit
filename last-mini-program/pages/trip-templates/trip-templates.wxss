/* pages/trip-templates/trip-templates.wxss */
page {
  background-color: #f5f6f8;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.template-container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 1. Header Section */
.header-section {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border-bottom: 1rpx solid #e2e8f0;
  padding: 0 32rpx 24rpx;
  z-index: 20;
}

.nav-bar {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}
.icon-chevron-left { width: 48rpx; height: 48rpx; margin-left: -12rpx; opacity: 0.7; }
.nav-title { font-size: 34rpx; font-weight: 900; color: #0f172a; }
.nav-right { width: 48rpx; }

/* Hero Card */
.hero-card {
  background: linear-gradient(135deg, #6366f1, #9333ea); /* Indigo to Purple */
  border-radius: 32rpx;
  padding: 40rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 16rpx 40rpx rgba(99, 102, 241, 0.25);
  margin-bottom: 32rpx;
}

.hero-bg-blur {
  position: absolute; top: -50%; right: -20%;
  width: 250rpx; height: 250rpx;
  background: rgba(255,255,255,0.15);
  border-radius: 50%;
  filter: blur(40px);
}

.hero-content {
  position: relative; z-index: 10;
  display: flex; justify-content: space-between; align-items: flex-end;
}

.hero-text { display: flex; flex-direction: column; }
.hero-title { font-size: 36rpx; font-weight: 800; color: white; margin-bottom: 8rpx; }
.hero-desc { font-size: 22rpx; color: #e0e7ff; font-weight: 500; }

.hero-btn {
  background: white; color: #4f46e5;
  padding: 16rpx 24rpx; border-radius: 20rpx;
  font-size: 22rpx; font-weight: 800;
  display: flex; align-items: center; gap: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}
.icon-plus-sm { width: 24rpx; height: 24rpx; }

/* Tabs */
.tabs-bar {
  background: #f1f5f9;
  padding: 8rpx;
  border-radius: 20rpx;
  display: flex;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 24rpx; font-weight: 700;
  color: #94a3b8;
  border-radius: 16rpx;
  transition: all 0.2s;
}

.tab-active {
  background: white;
  color: #0f172a;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

/* 2. List Content */
.list-scroll { flex: 1; overflow: hidden; }
.list-content { padding: 32rpx; }

.template-card {
  background: white;
  border-radius: 32rpx;
  padding: 32rpx;
  border: 1px solid #f1f5f9;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.02);
  margin-bottom: 24rpx;
}

.card-header { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 16rpx; }
.header-info { flex: 1; }
.title-row { display: flex; align-items: center; gap: 12rpx; margin-bottom: 8rpx; }
.card-title { font-size: 30rpx; font-weight: 800; color: #0f172a; line-height: 1.2; }

.status-badge {
  font-size: 18rpx; font-weight: 800; padding: 4rpx 10rpx; border-radius: 8rpx;
  border: 1px solid transparent;
}
.badge-public { background: #ecfdf5; color: #059669; border-color: #d1fae5; }
.badge-private { background: #f8fafc; color: #64748b; border-color: #f1f5f9; }

.card-desc { font-size: 22rpx; color: #64748b; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; line-height: 1.5; }

.card-actions { display: flex; gap: 12rpx; margin-left: 24rpx; }
.action-btn-circle {
  width: 64rpx; height: 64rpx; border-radius: 50%;
  background: #f8fafc; display: flex; align-items: center; justify-content: center;
}
.btn-danger { background: #fff1f2; }
.action-icon { width: 32rpx; height: 32rpx; opacity: 0.6; }

.tags-row { display: flex; flex-wrap: wrap; gap: 12rpx; margin-bottom: 24rpx; }
.meta-tag {
  display: flex; align-items: center; gap: 6rpx;
  background: #f8fafc; border: 1px solid #f1f5f9;
  padding: 6rpx 16rpx; border-radius: 12rpx;
  font-size: 20rpx; font-weight: 600; color: #475569;
}
.tag-icon { 
  width: 24rpx; 
  height: 24rpx; 
  opacity: 0.5; 
  display: block;
  flex-shrink: 0;
}
.hash-tag { font-size: 20rpx; font-weight: 600; color: #64748b; border: 1px solid #f1f5f9; padding: 6rpx 16rpx; border-radius: 12rpx; }

.card-footer {
  border-top: 1px solid #f8fafc;
  padding-top: 24rpx;
  display: flex; justify-content: space-between; align-items: center;
}
.footer-left { display: flex; align-items: center; gap: 12rpx; }
.status-text { font-size: 20rpx; font-weight: 800; display: flex; align-items: center; gap: 6rpx; }
.status-icon { width: 24rpx; height: 24rpx; }
.text-green { color: #10b981; }
.text-amber { color: #f59e0b; }
.text-red { color: #f43f5e; }
.dot { font-size: 20rpx; color: #cbd5e1; }
.count-text { font-size: 20rpx; color: #94a3b8; }
.author-text { font-size: 20rpx; font-weight: 800; color: #0ea5e9; }

/* Empty State */
.empty-state { display: flex; flex-direction: column; align-items: center; padding: 120rpx 0; opacity: 0.6; }
.empty-icon { width: 96rpx; height: 96rpx; margin-bottom: 24rpx; opacity: 0.5; }
.empty-text { font-size: 26rpx; font-weight: 700; color: #94a3b8; }

/* 3. Editor Modal */
.modal-mask {
  position: fixed; top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(15, 23, 42, 0.6); backdrop-filter: blur(2px); z-index: 100;
}

.editor-panel {
  position: fixed; bottom: 0; left: 0; right: 0;
  max-height: 90vh; background: white;
  border-top-left-radius: 48rpx; border-top-right-radius: 48rpx;
  z-index: 110; display: flex; flex-direction: column;
  transform: translateY(100%); transition: transform 0.3s ease-out;
}
.slide-up { transform: translateY(0); }

.editor-header {
  padding: 32rpx 48rpx;
  border-bottom: 1px solid #f1f5f9;
  display: flex; justify-content: space-between; align-items: center;
  background: rgba(255,255,255,0.9); backdrop-filter: blur(10px);
}
.editor-cancel { font-size: 28rpx; font-weight: 700; color: #64748b; }
.editor-title { font-size: 32rpx; font-weight: 900; color: #0f172a; }
.editor-save { font-size: 28rpx; font-weight: 700; color: #0284c7; }

.editor-scroll { flex: 1; }
.editor-body { padding: 48rpx; }

.form-section { display: flex; flex-direction: column; gap: 32rpx; margin-bottom: 48rpx; }
.form-item { display: flex; flex-direction: column; gap: 16rpx; }
.form-row { display: flex; gap: 24rpx; }
.w-24 { width: 160rpx; }
.flex-1 { flex: 1; }

.form-label { font-size: 20rpx; font-weight: 700; color: #94a3b8; text-transform: uppercase; letter-spacing: 2rpx; }
.form-input {
  background: #f8fafc; border: 1px solid #f1f5f9; border-radius: 24rpx;
  padding: 24rpx 32rpx; font-size: 28rpx; font-weight: 700; color: #1e293b;
}
.form-textarea {
  background: #f8fafc; border: 1px solid #f1f5f9; border-radius: 24rpx;
  padding: 24rpx 32rpx; font-size: 28rpx; font-weight: 500; color: #334155;
  height: 160rpx; width: 100%; box-sizing: border-box;
}

.type-grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 16rpx; }
.type-btn {
  padding: 16rpx 0; text-align: center; border-radius: 16rpx;
  font-size: 22rpx; font-weight: 700; border: 1px solid #f1f5f9;
  background: white; color: #64748b; transition: all 0.2s;
}
.type-active { background: #0f172a; color: white; border-color: #0f172a; }

.switch-row {
  background: #f8fafc; padding: 32rpx; border-radius: 24rpx; border: 1px solid #f1f5f9;
  display: flex; justify-content: space-between; align-items: center;
}
.switch-label { font-size: 28rpx; font-weight: 700; color: #334155; }
.switch-track { 
  width: 80rpx; 
  height: 48rpx; 
  border-radius: 100rpx; 
  padding: 4rpx; 
  transition: background 0.3s;
  position: relative;
  display: flex;
  align-items: center;
}
.switch-on { background: #10b981; }
.switch-off { background: #cbd5e1; }
.switch-thumb { 
  width: 40rpx; 
  height: 40rpx; 
  background: white; 
  border-radius: 50%; 
  transition: transform 0.3s;
  position: absolute;
  left: 4rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
}
.switch-on .switch-thumb { 
  transform: translateX(32rpx);
  left: auto;
  right: 4rpx;
}
.switch-off .switch-thumb {
  transform: translateX(0);
  left: 4rpx;
}

.items-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 24rpx; }
.items-count-badge { font-size: 20rpx; font-weight: 700; color: #0284c7; background: #e0f2fe; padding: 6rpx 16rpx; border-radius: 12rpx; }

.add-items-box {
  height: 200rpx; border: 2rpx dashed #e2e8f0; border-radius: 24rpx; background: #f8fafc;
  display: flex; flex-direction: column; align-items: center; justify-content: center; gap: 16rpx;
  color: #94a3b8; font-size: 24rpx; font-weight: 700;
  cursor: pointer;
  transition: all 0.2s;
}
.add-items-box:active {
  background: #f1f5f9;
  border-color: #cbd5e1;
}
.icon-plus-lg { width: 48rpx; height: 48rpx; opacity: 0.4; }

/* 4. 物品选择弹窗样式 */
.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(15,23,42,0.55);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.dialog-body {
  width: 90%;
  max-height: 90%;
  background: #fff;
  border-radius: 28rpx;
  display: flex;
  flex-direction: column;
  box-shadow: 0 20rpx 50rpx rgba(15,23,42,0.2);
}

.dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid #f3f4f6;
  font-size: 32rpx;
  font-weight: 600;
}

.dialog-close {
  font-size: 40rpx;
  padding: 0 12rpx;
  color: #9ca3af;
}

.dialog-content {
  padding: 24rpx 32rpx;
  overflow-y: auto;
  flex: 1;
}

.dialog-footer {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  padding: 20rpx 32rpx 32rpx;
  border-top: 1rpx solid #f3f4f6;
}

.filter-bar {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 0;
  margin-bottom: 24rpx;
  flex-wrap: wrap;
  align-items: center;
}

.filter-picker {
  flex: 1;
  min-width: 200rpx;
}

.picker-text {
  padding: 16rpx 24rpx;
  background: #f8fafc;
  border: 1rpx solid #e5e7eb;
  border-radius: 16rpx;
  font-size: 26rpx;
  color: #374151;
}

.filter-input {
  flex: 2;
  padding: 16rpx 24rpx;
  background: #f8fafc;
  border: 1rpx solid #e5e7eb;
  border-radius: 16rpx;
  font-size: 26rpx;
  color: #374151;
}

.reset-btn {
  padding: 16rpx 24rpx;
  background: #f3f4f6;
  border: 1rpx solid #e5e7eb;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.item-selection-section {
  margin-bottom: 24rpx;
}

.loading-tip {
  text-align: center;
  color: #9ca3af;
  padding: 40rpx 0;
  font-size: 26rpx;
}

.empty-tip {
  text-align: center;
  color: #9ca3af;
  padding: 60rpx 20rpx;
}

.item-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.item-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border-left: 8rpx solid transparent;
  transition: all 0.3s;
}

.item-card.checked {
  background: linear-gradient(135deg, #f0f9ff 0%, #e6f7ff 100%);
  border-left-color: #409eff;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.checkbox-label {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.item-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.item-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.item-category {
  font-size: 22rpx;
  color: #6b7280;
  background: #f3f4f6;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  display: inline-block;
  width: fit-content;
}

.item-description {
  font-size: 24rpx;
  color: #9ca3af;
  line-height: 1.5;
}

.selected-items-section {
  margin-top: 32rpx;
  padding-top: 32rpx;
  border-top: 1rpx solid #f3f4f6;
}

.selected-items-header {
  font-size: 26rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 16rpx;
}

.selected-items-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.selected-item-tag {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: #e0f2fe;
  border: 1rpx solid #bae6fd;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 600;
  color: #0284c7;
}

.selected-item-name {
  flex: 1;
}

.selected-item-category {
  font-size: 20rpx;
  color: #0ea5e9;
  background: #bae6fd;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.selected-items-preview {
  display: flex; flex-wrap: wrap; gap: 12rpx; margin-bottom: 16rpx;
}
.selected-item-tag {
  display: flex; align-items: center; gap: 8rpx;
  background: #e0f2fe; border: 1px solid #bae6fd;
  padding: 8rpx 16rpx; border-radius: 16rpx;
  font-size: 22rpx; font-weight: 600; color: #0284c7;
}
.selected-item-name { flex: 1; }
.remove-item-btn {
  width: 32rpx; height: 32rpx;
  display: flex; align-items: center; justify-content: center;
  background: #bae6fd; border-radius: 50%;
  color: #0284c7; font-size: 24rpx; font-weight: 700;
  line-height: 1;
}
